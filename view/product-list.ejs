<!DOCTYPE html>
<html>
<head>
    <title>Web APP Monitor Rilevamento Prezzi - Product List</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('partials/head'); %>
    <script type="text/javascript" src="/utility-script"></script>
    <script type="text/javascript" src="/validation-script"></script>
    <script type="text/javascript" src="/product-list-script"></script>
    <script type="text/javascript" src="/logout-script"></script>
</head>
<body>
    <form name="frmProductList">
        <input type="hidden" name="OffsetRows" id="OffsetRows" value="0" />
        <%- include('partials/header'); %>

        <div class="modal spinner" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                  <div class="col-lg-12" style="text-align: center;">
                      <img src="/images/loader-content-icon.jpg" style="width:300px; height:300px;" />
                  </div>
                  <div class="spinner-border text-primary" style="position:absolute; margin:16px; width: 5rem; height: 5rem;" role="status">
                    <span class="sr-only"></span>
                  </div>
              </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 filter">
                <h5>
                    <span class="glyphicon glyphicon-bookmark" style="color:#0088ff;"></span>&nbsp;<b>Catalogo /</b>
                </h5>
                <hr style="border: 1px solid #d1d1d1;" />
                <div class="row">
                    <label for="Buyer" class="col-form-label">Buyer</label>
                </div>
                <div class="row">
                    <select name id="Buyer" class="form-select" style="font-size:15px;">
                        <option value="">Tutti</option>
                    </select>
                </div>
                <div class="row">
                    <label for="Fornitore" class="col-form-label">Fornitore</label>
                </div>
                <div class="row">
                    <select name id="Fornitore" class="form-select" style="font-size:15px;">
                        <option value="">Tutti</option>
                    </select>
                </div>
                <div class="row">
                    <label for="CodiceArticolo" class="col-form-label">Codice Articolo</label>
                </div>
                <div class="row">
                    <input type="text" id="CodiceArticolo" class="form-control" placeholder="es: 0005837">
                </div>
                <h6></h6>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="IdStatoApprovazione" id="rbApprovalState_1" value="1">
                    <label class="form-check-label" for="rbApprovalState_1">
                    In lavorazione
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="IdStatoApprovazione" id="rbApprovalState_5" value="5">
                    <label class="form-check-label" for="rbApprovalState_5">
                    In approvazione
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="IdStatoApprovazione" id="rbApprovalState_0" checked value="0">
                    <label class="form-check-label" for="rbApprovalState_0">
                    Tutti
                    </label>
                </div>
                <h6></h6> 
                <div class="row">
                    <button type="button" class="btn btn-primary btn-search">Cerca</button>
                </div>
                <h5 class="load-pager">
                    <% if (user.NextRows > RowsCount) { %>
                        <span class="LoadedRows"><%= RowsCount %></span>
                    <% } else { %>
                        <span class="LoadedRows"><%= user.NextRows %></span>
                    <% } %>
                    di <b><span class="RowsCount"><%= RowsCount %> </span></b> articoli
                </h5>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-6 col-xs-12 col-lg-push-3 col-md-push-3 col-sm-push-6">

                <!-- System message-->
                <div id="system-message" style="display:none;">
	                <div class="col-xs-12">
		                <div class="form-group form-errors">
			                <div class="panel panel-danger">
				                <div class="panel-heading">
					                <b>Messaggio di sistema</b>
				                </div>
				                <div class="panel-body pnl-errors"></div>
			                </div>
		                </div>
	                </div>
                </div>
                <div class="data-container">
                    <% if (Array.isArray(products)) { %>
                        <% products.forEach(function(product) { %>
                             <%- include('../template/product-list', {product: product}); %>
                          <% }); %>
                    <% } else { %>
                        <%- include('../template/product-list', {product: products}); %>
                    <% } %>
                </div>
                <%- include('../template/bottom-pager', {product: products}); %>
            </div>

        </div>
    </form>

    <form name="frmDetectPrice" class="was-validated" novalidate>
        <div class="modal" id="detect-price" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">
                            <span class="glyphicon glyphicon-barcode"></span>&nbsp;&nbsp;<span class="text-primary CodiceArticolo"></span> / Rileva prezzo competitor
                        </h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <ul id="nav-tabs-detect-price" class="nav nav-tabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="tab-detect-price-detail" data-bs-toggle="tab" href="#tabpanel-detect-price-detail" role="tab" aria-controls="tabpanel-detect-price-detail" aria-selected="true">
                                    Dettaglio
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="tab-detect-price-history" data-bs-toggle="tab" href="#tabpanel-detect-price-history" role="tab" aria-controls="tabpanel-detect-price-history" aria-selected="false">
                                    History
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content pt-2" id="tab-content-detect-price">
                            <!-- Detail -->
                            <div style="height:520px;" class="tab-pane active" id="tabpanel-detect-price-detail" role="tabpanel" aria-labelledby="tab-detect-price-detail">
                            </div>
                            <!-- History -->
                            <div style="height:520px;" class="tab-pane" id="tabpanel-detect-price-history" role="tabpanel" aria-labelledby="tab-detect-price-history">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    </form>

    <form name="frmSuggestPrice" class="was-validated" novalidate>
        <div class="modal" id="suggest-price" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">
                            <span class="glyphicon glyphicon-barcode"></span>&nbsp;&nbsp;<span class="text-primary CodiceArticolo"></span> / Suggerisci prezzo di vendita
                        </h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="tab-suggest-price-detail" data-bs-toggle="tab" href="#tabpanel-suggest-price-detail" role="tab" aria-controls="tabpanel-suggest-price-detail" aria-selected="true">
                                    Dettaglio
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="simple-tab-2" data-bs-toggle="tab" href="#simple-tabpanel-2" role="tab" aria-controls="simple-tabpanel-2" aria-selected="false">
                                    History
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content pt-2" id="tab-content-suggest-price">
                            <!-- Detail -->
                            <div style="height:450px;" class="tab-pane active" id="tabpanel-suggest-price-detail" role="tabpanel" aria-labelledby="tab-suggest-price-detail">
                            </div>
                            <!-- History -->
                            <div style="height:450px;" class="tab-pane" id="simple-tabpanel-2" role="tabpanel" aria-labelledby="simple-tab-2">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </form>

</body>
</html>