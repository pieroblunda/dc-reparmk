<div id="container-<%= product.CodiceArticolo %>" class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
    <div class="jumbotron-product">
        <div class="container-fluid" style="padding:0 !important;">
            <% if (product.PercentualeSconto != '0.00') { %>
                <h6 class="rounded" style="position:relative; margin:0; width:52px !important; height:20px !important; padding:4px; padding-left:6px; margin-right:0; float:right; top:-10px; background-color:#0088ff; color:#fff;">
                    -<%= product.PercentualeSconto %>%
                </h6>
            <% } %>
            <h6 id="<%= product.CodiceArticolo %>-StatoArticolo" class="bi bi-circle-fill bullet-barcode <% if (product.IdStatoApprovazioneArticolo == 1) { %> text-secondary <% } else if (product.IdStatoApprovazioneArticolo == 3) { %> text-danger <% } else if (product.IdStatoApprovazioneArticolo == 5) { %> text-warning <% } else if (product.IdStatoApprovazioneArticolo == 2 || product.IdStatoApprovazioneArticolo == 4) { %> text-success <% } else { %> text-primary <% } %>" style="position:absolute; left:24px; top:-1px; z-index:1;"></h6>
            <span class="bullet-articolo"><%= product.CodiceArticolo %></span>
            <div class="col-xs-12">
                <img src="http://cdn.dcgroup/images/<%= product.CodiceArticolo %>.jpg" 
                onerror="this.onerror=null; this.src='/images/image.png';"
                class="img-fluid" />
            </div>
            <div class="col-xs-12">
                <h5 style="color:gray;"><span class="glyphicon glyphicon-barcode"></span>&nbsp;&nbsp;<%= product.CodiceBarre %></h5>
                <h6 class="text-primary">
                    <%= product.DescrizioneCategoria %>, <%= product.DescrizioneSottocategoria %>
                </h6>
                <h6>
                    <% if (product.CodiceFornitore != "") { %>
                        <%= product.RagioneSocialeFornitore %>
                        <% if (product.ArtForn) { %> (<%= product.ArtForn %>) <% } %>
                    <% } else { %>
                        Fornitore non dispnonibile
                    <% } %>
                </h6>
                <h4 class="text-info" style="height:60px !important;">
                    <b class="col-xs-12 text-dark" style="padding:0;">
                        <%= product.Denominazione %>
                    </b>
                </h4>
                <div class="col-xs-6" style="padding:0;">
                    <i class="bi bi-piggy-bank ricarico-icon<% if (eval(product.PercentualeRicaricoSuggerita) < eval(product.PercentualeRicarico)) { %>-minus <% } %>"></i>
                    <span class="rounded-circle ricarico<% if (eval(product.PercentualeRicaricoSuggerita) < eval(product.PercentualeRicarico)) { %>-minus <% } %>" style="text-align:left !important;">
                        Nuovo Ricarico<br>
                        <%= product.PercentualeRicaricoSuggerita %>%<br>
                        <b class="text-secondary" style="text-decoration: line-through;">
                            <b><%= product.PercentualeRicarico %>%</b>
                        </b>
                    </span>
                </div>
                <div class="col-xs-6" style="padding:0;">
                    <h5 class="primary-price-fornitore">
                        <%= product.PrezzoListinoFornitore%><span class="bi bi-currency-euro"></span>
                    </h5>
                    <span class="text-primary primary-price-fornitore-badge">
                        Prezzo Fornitore
                    </span>
                </div>                
                <!--h6 class="text-muted">
                    <% if (product.QuantitaPacco != product.QuantitaBox) { %>
                        <%= product.QuantitaPacco %> unit&agrave; / Confezione da <%= product.QuantitaBox %> PZ
                    <% } else { %>
                        Confezione da <%= product.QuantitaBox %> PZ
                    <% } %>
                </h6-->
            </div>
            <div class="col-xs-12">
                <table class="table table-sm" style="font-size:11px;">
                    <tbody>
                        <tr>
                            <td scope="row" rowspan="<%=product.ArticoloBrands.split(",").length+2%>" width="48%">
                                <span class="badge bg-primary badge-price-suggest" style="background-color:forestgreen !important">
                                    Prezzo Suggerito
                                </span>
                                <h2 class="primary-price" style="color:forestgreen">
                                    <%= product.PrezzoSuggerito%><span class="bi bi-currency-euro"></span>
                                </h2>
                                <h3 class="primary-price-fornitore" style="text-decoration: line-through;">
                                    <%= product.PrezzoListinoBase%><span class="bi bi-currency-euro"></span>
                                </h3>
                                <span class="primary-price-fornitore-badge">
                                    Listino Base
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td scope="col" colspan="2">
                                <span class="primary-price-competitor-badge">
                                    Competitor
                                </span>
                            </td>
                        </tr>
                        <%
                        if (product.ArticoloBrands) {
                            let brands = product.ArticoloBrands.split(",");
                            brands.forEach(function(brand) { %>
                            <tr>
                                <td scope="col">
                                    <%=brand%>
                                </td>
                                <td scope="col" class="text-right">
                                    <% if (brand.trim() == "Family") { %>
                                        <% if (product.PrezzoFamily) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoFamily %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Ilomo") { %>
                                        <% if (product.PrezzoIlomo) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoIlomo %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Sunlux") { %>
                                        <% if (product.PrezzoSunlux) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoSunlux %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Papironia") { %>
                                        <% if (product.PrezzoPapironia ) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoPapironia %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Scipioni") { %>
                                        <% if (product.PrezzoScipioni) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoScipioni %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "SacchettoDoro") { %>
                                        <% if (product.PrezzoSacchettoDoro) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoSacchettoDoro %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Mp") { %>
                                        <% if (product.PrezzoMp) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoMp %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Eurocom") { %>
                                        <% if (product.PrezzoEurocom) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoEurocom %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Modo") { %>
                                        <% if (product.PrezzoModo) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoModo %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Michelle") { %>
                                        <% if (product.PrezzoMichelle) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoMichelle %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "EmBeauty") { %>
                                        <% if (product.PrezzoEmBeauty) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoEmBeauty %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Susy") { %>
                                        <% if (product.PrezzoSusy) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoSusy %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                    <% if (brand.trim() == "Tertio") { %>
                                        <% if (product.PrezzoTertio) { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>"><%= product.PrezzoTertio %></span><span class="bi bi-currency-euro"></span>
                                        <% } else { %>
                                            <span id="<%= product.CodiceArticolo %>-Prezzo<%=brand.trim()%>">0.00</span><span class="bi bi-currency-euro"></span>
                                        <% } %>
                                    <% } %>
                                </td>
                            </tr>
                        <%  });
                        }
                        %>
                    </tbody>
                </table>
                <div class="col-xs-12" style="padding-right:0; margin-right:0;">
                    <div class="btn-group dropup" style="display:block; width:100%; text-align:right;">
                        <button type="button" class="btn btn-default bi bi-three-dots-vertical rounded-circle"
                            data-bs-toggle="dropdown" style="width:34px; height:34px; padding:0; float:right;">
                        </button>
                        <ul class="dropdown-menu dropdown-menu-lg-end" style="width:250px;">
                            <li>
                                <div class="col-xs-12">
                                    <b>Articolo <%= product.CodiceArticolo %></b>
                                </div>
                            </li>
                            <li class="dropdown-item">
                                <hr class="dropdown-divider">
                            </li>
                            <li class="dropdown-item">
                                <% if (product.IdStatoApprovazione == 5 && (user.Ruolo == "SUPERVISOR" && product.IdStatoApprovazioneArticolo == 2)) { %>
                                    <button id="<%= product.CodiceArticolo %>-btn-cancel-price" type="button" class="btn btn-light col-xs-12"
                                        data-toggle="modal" data-target="#confirm-delete"
                                        data-callback="switchProductApprovalsState"
                                        data-args='{ "IdApprovazioneArticolo": <%= product.IdApprovazioneArticolo %>, "IdStatoApprovazione": 3, "CodiceArticolo": "<%= product.CodiceArticolo %>" }'>
                                        Rifiuta prezzo di vendita
                                    </button>
                                <% } else { %>
                                    <button type="button" class="btn btn-light col-xs-12 disabled">
                                        Rifiuta prezzo di vendita
                                    </button>
                                <% } %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>